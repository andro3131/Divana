---
import { useTranslations, type Locale } from '../../i18n/ui';
import { sectionIds, getLocalizedPath } from '../../i18n/utils';
import { LOGO_IMAGE } from '../../lib/constants';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const t = useTranslations(locale);
const altLocale = locale === 'sl' ? 'en' : 'sl';
const altPath = locale === 'sl' ? '/en/' : '/';

const navItems = [
  { key: 'about', label: t('nav.about') },
  { key: 'music', label: t('nav.music') },
  { key: 'gallery', label: t('nav.gallery') },
  { key: 'services', label: t('nav.services') },
  { key: 'danceEvenings', label: t('nav.danceEvenings') },
  { key: 'contact', label: t('nav.contact') },
];
---

<nav id="navbar" class="fixed top-0 left-0 right-0 z-50 transition-all duration-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-20">
      <!-- Logo + subtitle -->
      <a href={getLocalizedPath('/', locale)} class="hover:opacity-80 transition-opacity">
        <img src={LOGO_IMAGE} alt="Divana" class="h-8 md:h-12 w-auto" />
      </a>

      <!-- Desktop nav -->
      <div class="hidden lg:flex items-center gap-8">
        {navItems.map((item) => (
          <a
            href={`#${sectionIds[item.key][locale]}`}
            class="text-dark-200 hover:text-gold text-sm tracking-wider uppercase transition-colors duration-200"
          >
            {item.label}
          </a>
        ))}
        <a
          href={altPath}
          class="ml-4 text-dark-400 hover:text-dark-100 text-xs uppercase border border-dark-600 rounded px-2.5 py-1 transition-colors"
        >
          {altLocale === 'sl' ? 'SL' : 'EN'}
        </a>
      </div>

      <!-- Mobile hamburger -->
      <button
        id="mobile-menu-btn"
        class="lg:hidden text-dark-200 hover:text-gold transition-colors p-2"
        aria-label="Menu"
      >
        <svg id="menu-icon-open" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg id="menu-icon-close" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile menu -->
  <div id="mobile-menu" class="lg:hidden hidden bg-dark-950/98 backdrop-blur-lg border-t border-dark-700/50">
    <div class="px-6 py-6 space-y-4">
      {navItems.map((item) => (
        <a
          href={`#${sectionIds[item.key][locale]}`}
          class="mobile-nav-link block text-dark-200 hover:text-gold text-lg tracking-wider uppercase transition-colors"
        >
          {item.label}
        </a>
      ))}
      <div class="pt-4 border-t border-dark-700/50">
        <a href={altPath} class="text-dark-400 hover:text-dark-100 text-sm uppercase">
          {altLocale === 'sl' ? 'Slovenščina' : 'English'}
        </a>
      </div>
    </div>
  </div>
</nav>

<script>
  // Navbar scroll effect
  const navbar = document.getElementById('navbar');
  window.addEventListener('scroll', () => {
    if (window.scrollY > 50) {
      navbar?.classList.add('bg-dark-950/95', 'backdrop-blur-md', 'shadow-lg');
    } else {
      navbar?.classList.remove('bg-dark-950/95', 'backdrop-blur-md', 'shadow-lg');
    }
  });

  // Mobile menu toggle
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const iconOpen = document.getElementById('menu-icon-open');
  const iconClose = document.getElementById('menu-icon-close');

  menuBtn?.addEventListener('click', () => {
    const isOpen = !mobileMenu?.classList.contains('hidden');
    mobileMenu?.classList.toggle('hidden');
    iconOpen?.classList.toggle('hidden');
    iconClose?.classList.toggle('hidden');
  });

  // Close mobile menu on link click
  document.querySelectorAll('.mobile-nav-link').forEach((link) => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
      iconOpen?.classList.remove('hidden');
      iconClose?.classList.add('hidden');
    });
  });
</script>
