---
import { useTranslations, type Locale } from '../../i18n/ui';
import { sectionIds } from '../../i18n/utils';
import { HERO_IMAGE } from '../../lib/constants';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const t = useTranslations(locale);
const danceId = sectionIds.danceEvenings[locale];
---

<section id="hero" class="relative h-screen w-full overflow-hidden">
  <!-- Background image -->
  <div class="absolute inset-0">
    <img
      src={HERO_IMAGE}
      alt="Divana - Maja Marinčič"
      class="w-full h-full object-cover object-top"
      loading="eager"
      fetchpriority="high"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-dark-900 via-dark-900/40 to-dark-900/20"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 flex items-end justify-between h-full pb-24 px-4 md:px-8 lg:px-16">
    <!-- Left: Title -->
    <div class="text-center md:text-left flex-1">
      <h1 class="text-5xl md:text-7xl lg:text-8xl font-heading font-semibold text-gold-gradient animate-fade-in mb-4 tracking-wide">
        Divana
      </h1>
      <p class="text-lg md:text-xl text-primary-200/80 font-light tracking-widest uppercase animate-fade-in-delay">
        {t('hero.subtitle')}
      </p>
    </div>

    <!-- Right: Dance Evening Banner -->
    <div class="hidden md:block animate-fade-in-delay">
      <a href={`#${danceId}`} class="group block bg-dark-950/60 backdrop-blur-md border border-gold/30 rounded-2xl p-6 lg:p-8 max-w-xs hover:border-gold/60 hover:bg-dark-950/70 transition-all duration-300">
        <span class="inline-block px-3 py-1 bg-gold/20 text-gold text-xs font-semibold tracking-widest uppercase rounded-full mb-3">
          {locale === 'sl' ? 'Novo' : 'New'}
        </span>
        <h2 class="text-xl lg:text-2xl font-heading font-semibold text-dark-50 mb-2">
          {t('danceEvenings.title')}
        </h2>
        <p class="text-dark-300 text-sm leading-relaxed mb-4">
          {t('danceEvenings.subtitle')}
        </p>
        <span class="inline-flex items-center text-gold text-sm font-medium group-hover:gap-3 gap-2 transition-all">
          {t('danceEvenings.reserve')}
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
        </span>
      </a>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 z-10 animate-bounce">
    <svg class="w-6 h-6 text-primary-400/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7" />
    </svg>
  </div>
</section>
