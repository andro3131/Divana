---
import { useTranslations, type Locale } from '../../i18n/ui';
import { HERO_IMAGE, SOCIAL_LINKS } from '../../lib/constants';
import DanceEveningBanner from '../ui/DanceEveningBanner.astro';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const t = useTranslations(locale);
---

<!-- Scroll zone: extra height creates scroll space for zoom effect before page moves -->
<div id="hero-scroll-zone" class="relative" style="height: 170vh;">
<section id="hero" class="sticky top-0 h-screen w-full overflow-hidden">
  <!-- Background image -->
  <div class="absolute inset-0">
    <img
      src={HERO_IMAGE}
      alt="Divana - Maja Marinčič"
      id="hero-img"
      class="w-full h-full object-cover object-[18%_12%] md:object-top hero-zoom-in"
      loading="eager"
      fetchpriority="high"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-dark-900 via-dark-900/15 to-transparent"></div>
  </div>

  <!-- Mobile subtitle - below header, centered -->
  <div class="absolute z-10 md:hidden top-[4.75rem] left-1/2 -translate-x-1/2 text-center animate-fade-in-delay">
    <p class="text-sm text-primary-200/70 font-light tracking-[0.2em] uppercase whitespace-nowrap">{t('hero.subtitle')}</p>
  </div>

  <!-- Desktop: subtitle + social icons, tracks singer position -->
  <div id="hero-subtitle-desktop" class="absolute z-10 hidden md:flex flex-col items-center bottom-[16%] left-[28%] -translate-x-1/2 animate-fade-in-delay">
    <p class="text-lg lg:text-xl text-primary-200/80 font-light tracking-widest uppercase mb-4">{t('hero.subtitle')}</p>
    <div class="flex items-center gap-5">
      <a href={SOCIAL_LINKS.facebook} target="_blank" rel="noopener noreferrer" class="text-primary-200/40 hover:text-gold transition-colors" aria-label="Facebook">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
      </a>
      <a href={SOCIAL_LINKS.instagram} target="_blank" rel="noopener noreferrer" class="text-primary-200/40 hover:text-gold transition-colors" aria-label="Instagram">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/></svg>
      </a>
      <a href={SOCIAL_LINKS.spotify} target="_blank" rel="noopener noreferrer" class="text-primary-200/40 hover:text-gold transition-colors" aria-label="Spotify">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"/></svg>
      </a>
      <a href={SOCIAL_LINKS.youtube} target="_blank" rel="noopener noreferrer" class="text-primary-200/40 hover:text-gold transition-colors" aria-label="YouTube">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814z"/><polygon fill="#0a1720" points="9.545,15.568 15.818,12 9.545,8.432"/></svg>
      </a>
    </div>
  </div>

  <!-- Dance Evening Banner - centered bottom on mobile, right side on desktop -->
  <div class="absolute left-1/2 -translate-x-1/2 bottom-12 sm:bottom-16 md:left-auto md:translate-x-0 md:right-[14%] md:top-[55%] md:bottom-auto md:-translate-y-1/2 lg:right-[16%] xl:right-[18%] z-20 hero-banner-mobile">
    <DanceEveningBanner locale={locale} />
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 z-10 animate-bounce">
    <svg class="w-6 h-6 text-primary-400/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7" />
    </svg>
  </div>
</section>
</div>

<style>
  /* Initial zoom-out effect on page load */
  @keyframes heroZoomIn {
    from { transform: scale(1.15); }
    to { transform: scale(1); }
  }

  .hero-zoom-in {
    animation: heroZoomIn 2.5s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards;
    will-change: transform;
  }

  /* Wider, shorter banner on mobile */
  @media (max-width: 767px) {
    .hero-banner-mobile :global(.banner-wrapper) {
      width: min(320px, 82vw);
      aspect-ratio: 3 / 2.6;
    }
  }
</style>

<script>
  const heroImg = document.getElementById('hero-img') as HTMLImageElement;
  const scrollZone = document.getElementById('hero-scroll-zone');
  const subtitleDesktop = document.getElementById('hero-subtitle-desktop');

  // Track singer position on desktop
  // singerX = fraction of image width where singer's body center is
  const singerX = 0.37;

  function updateSubtitlePosition() {
    if (!heroImg || !subtitleDesktop || window.innerWidth < 768) return;
    const imgW = heroImg.naturalWidth;
    const imgH = heroImg.naturalHeight;
    if (!imgW || !imgH) return;

    const vw = window.innerWidth;
    const vh = window.innerHeight;

    // object-cover center top: scale to fill, centered horizontally, top-aligned
    const scale = Math.max(vw / imgW, vh / imgH);
    const renderedW = imgW * scale;
    const offsetX = (vw - renderedW) / 2;
    const screenX = offsetX + singerX * renderedW;

    subtitleDesktop.style.left = screenX + 'px';
  }

  if (heroImg && subtitleDesktop) {
    if (heroImg.complete) {
      updateSubtitlePosition();
    } else {
      heroImg.addEventListener('load', updateSubtitlePosition, { once: true });
    }
    window.addEventListener('resize', updateSubtitlePosition);
  }

  if (heroImg && scrollZone) {
    // After intro animation ends, remove class so JS can control transform
    heroImg.addEventListener('animationend', () => {
      heroImg.classList.remove('hero-zoom-in');
      heroImg.style.transform = 'scale(1)';
    }, { once: true });

    const viewportH = window.innerHeight;
    const zoomDistance = scrollZone.offsetHeight - viewportH;
    let ticking = false;

    window.addEventListener('scroll', () => {
      if (!ticking) {
        requestAnimationFrame(() => {
          const scrollY = window.scrollY;

          if (scrollY <= zoomDistance && zoomDistance > 0) {
            const progress = scrollY / zoomDistance;
            const scale = 1 + progress * 0.15;
            heroImg.style.transform = `scale(${scale})`;
          } else if (scrollY < scrollZone.offsetHeight) {
            heroImg.style.transform = `scale(1.15)`;
          }

          ticking = false;
        });
        ticking = true;
      }
    });
  }
</script>
