---
import { useTranslations, type Locale } from '../../i18n/ui';
import { sectionIds } from '../../i18n/utils';
import { HERO_IMAGE } from '../../lib/constants';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const t = useTranslations(locale);
const danceId = sectionIds.danceEvenings[locale];
---

<section id="hero" class="relative h-screen w-full overflow-hidden">
  <!-- Background image -->
  <div class="absolute inset-0">
    <img
      src={HERO_IMAGE}
      alt="Divana - Maja Marinčič"
      class="w-full h-full object-cover object-top"
      loading="eager"
      fetchpriority="high"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-dark-900 via-dark-900/40 to-dark-900/20"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 flex flex-col items-center justify-end h-full pb-24 px-4 md:px-8 lg:px-16">
    <!-- Center: Title -->
    <div class="text-center mb-8">
      <h1 class="text-5xl md:text-7xl lg:text-8xl font-heading font-semibold text-gold-gradient animate-fade-in mb-4 tracking-wide">
        Divana
      </h1>
      <p class="text-lg md:text-xl text-primary-200/80 font-light tracking-widest uppercase animate-fade-in-delay">
        {t('hero.subtitle')}
      </p>
    </div>

    <!-- Dance Evening Banner - Glamorous Gold -->
    <div class="hidden md:block absolute right-6 lg:right-16 bottom-24 animate-fade-in-delay">
      <a href={`#${danceId}`} class="dance-banner group block relative overflow-hidden rounded-2xl p-[1px] max-w-xs hover:scale-[1.02] transition-transform duration-300">
        <!-- Gold gradient border -->
        <div class="absolute inset-0 rounded-2xl bg-gradient-to-br from-gold-light via-gold to-gold-dark opacity-60 group-hover:opacity-90 transition-opacity duration-300"></div>
        <!-- Inner content -->
        <div class="relative bg-dark-950/80 backdrop-blur-xl rounded-2xl p-6 lg:p-8">
          <span class="inline-block px-3 py-1 bg-gradient-to-r from-gold-dark/30 to-gold/30 text-gold-light text-xs font-semibold tracking-widest uppercase rounded-full mb-3 border border-gold/40">
            {locale === 'sl' ? 'Novo' : 'New'}
          </span>
          <h2 class="text-xl lg:text-2xl font-heading font-semibold text-gold-gradient mb-2">
            {t('danceEvenings.title')}
          </h2>
          <p class="text-primary-200/70 text-sm leading-relaxed mb-4 italic">
            {t('danceEvenings.subtitle')}
          </p>
          <span class="inline-flex items-center text-gold-light text-sm font-medium group-hover:gap-3 gap-2 transition-all">
            {t('danceEvenings.reserve')}
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
          </span>
        </div>
        <!-- Shimmer effect -->
        <div class="absolute inset-0 rounded-2xl bg-gradient-to-r from-transparent via-gold-light/10 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-700"></div>
      </a>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 z-10 animate-bounce">
    <svg class="w-6 h-6 text-primary-400/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7" />
    </svg>
  </div>
</section>
