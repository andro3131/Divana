---
import { useTranslations, type Locale } from '../../i18n/ui';
import { sectionIds } from '../../i18n/utils';
import { HERO_IMAGE } from '../../lib/constants';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const t = useTranslations(locale);
const danceId = sectionIds.danceEvenings[locale];
const reserveText = locale === 'sl' ? 'Rezerviraj mesto' : 'Reserve a spot';
---

<section id="hero" class="relative h-screen w-full overflow-hidden">
  <!-- Background image -->
  <div class="absolute inset-0">
    <img
      src={HERO_IMAGE}
      alt="Divana - Maja Marinčič"
      class="w-full h-full object-cover object-top"
      loading="eager"
      fetchpriority="high"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-dark-900 via-dark-900/40 to-dark-900/20"></div>
  </div>

  <!-- Title - left third, lower -->
  <div class="absolute z-10 left-6 md:left-12 lg:left-20 bottom-24 md:bottom-32 lg:bottom-36 animate-fade-in">
    <h1 class="text-5xl md:text-7xl lg:text-8xl font-heading font-semibold text-gold-gradient mb-3 tracking-wide">
      Divana
    </h1>
    <p class="text-base md:text-lg lg:text-xl text-primary-200/80 font-light tracking-widest uppercase animate-fade-in-delay">
      {t('hero.subtitle')}
    </p>
  </div>

  <!-- Dance Evening Star Banner - right side, vertically centered -->
  <div class="hidden md:block absolute right-8 lg:right-16 xl:right-24 top-1/2 -translate-y-1/2 animate-fade-in-delay">
    <div class="star-float flex flex-col items-center">
      <!-- Star -->
      <div class="relative w-[300px] lg:w-[360px] xl:w-[400px] aspect-square group">
        <!-- SVG Star background -->
        <svg class="absolute inset-0 w-full h-full drop-shadow-[0_0_40px_rgba(201,168,76,0.3)] group-hover:drop-shadow-[0_0_60px_rgba(201,168,76,0.5)] transition-all duration-500" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
          <defs>
            <linearGradient id="starGold" x1="0%" y1="0%" x2="100%" y2="100%">
              <stop offset="0%" stop-color="#f5e8a0"/>
              <stop offset="25%" stop-color="#e0c872"/>
              <stop offset="50%" stop-color="#c9a84c"/>
              <stop offset="75%" stop-color="#dcc26a"/>
              <stop offset="100%" stop-color="#f0dc8a"/>
            </linearGradient>
          </defs>
          <polygon
            points="100,2 132,56 193,70 157,117 158,178 100,158 42,178 43,117 7,70 68,56"
            fill="url(#starGold)"
            class="group-hover:opacity-100 opacity-90 transition-opacity duration-300"
          />
        </svg>

        <!-- Star text - minimal info only -->
        <div class="absolute inset-0 flex items-center justify-center z-10">
          <div class="text-center px-[25%]">
            <p class="text-dark-900 text-[10px] lg:text-xs xl:text-sm font-bold tracking-widest uppercase mb-2">
              {locale === 'sl' ? 'Plesni večer' : 'Dance Evening'}
            </p>
            <p class="text-dark-900 text-2xl lg:text-3xl xl:text-4xl font-heading font-bold tracking-wide mb-3">
              Divana
            </p>
            <p class="text-dark-800 text-[9px] lg:text-[11px] xl:text-xs font-medium leading-snug">
              Dvorana Stik
            </p>
            <p class="text-dark-800 text-[9px] lg:text-[11px] xl:text-xs font-medium">
              {locale === 'sl' ? '8. marec 2026 ob 18h' : 'March 8, 2026 at 18h'}
            </p>
          </div>
        </div>

        <!-- Sparkle decorations -->
        <div class="absolute -top-4 -right-2 text-gold text-2xl animate-pulse">&#10022;</div>
        <div class="absolute -bottom-3 -left-3 text-gold-light text-xl animate-pulse" style="animation-delay: 0.7s">&#10022;</div>
        <div class="absolute top-1/4 -left-5 text-gold-dark/70 text-sm animate-pulse" style="animation-delay: 1.2s">&#10023;</div>
        <div class="absolute bottom-1/4 -right-4 text-gold/60 text-base animate-pulse" style="animation-delay: 0.4s">&#10023;</div>
      </div>

      <!-- Reservation button below star -->
      <a
        href={`#${danceId}`}
        class="mt-4 lg:mt-6 inline-block px-8 lg:px-10 py-3 lg:py-3.5 bg-gradient-to-r from-gold-dark via-gold to-gold-light text-dark-900 text-sm lg:text-base font-bold tracking-widest uppercase rounded-full hover:scale-105 hover:shadow-[0_0_30px_rgba(201,168,76,0.4)] transition-all duration-300"
      >
        {reserveText}
      </a>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 z-10 animate-bounce">
    <svg class="w-6 h-6 text-primary-400/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7" />
    </svg>
  </div>
</section>
