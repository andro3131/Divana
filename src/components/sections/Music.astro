---
import { useTranslations, type Locale } from '../../i18n/ui';
import { sectionIds } from '../../i18n/utils';
import { YOUTUBE_VIDEOS } from '../../lib/constants';
import SectionHeading from '../ui/SectionHeading.astro';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const t = useTranslations(locale);
const sectionId = sectionIds.music[locale];

const previewVideos = YOUTUBE_VIDEOS.slice(0, 4);
const musicPageUrl = locale === 'sl' ? '/glasba' : '/en/music';
---

<section id={sectionId} class="py-24 px-4 md:px-8 bg-dark-950">
  <div class="max-w-7xl mx-auto">
    <SectionHeading title={t('music.title')} />

    <!-- 4 Featured YouTube Videos - 2x2 grid (lite embed: thumbnail + play button) -->
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 mb-8" data-animate>
      {previewVideos.map((videoId) => (
        <div
          class="yt-lite aspect-video rounded-xl overflow-hidden bg-dark-800 relative cursor-pointer group"
          data-videoid={videoId}
        >
          <img
            src={`https://img.youtube.com/vi/${videoId}/hqdefault.jpg`}
            alt="YouTube video"
            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
            loading="lazy"
          />
          <div class="absolute inset-0 bg-dark-950/30 group-hover:bg-dark-950/10 transition-colors duration-300"></div>
          <div class="absolute inset-0 flex items-center justify-center">
            <div class="w-16 h-16 bg-red-600 rounded-full flex items-center justify-center shadow-lg group-hover:scale-110 group-hover:bg-red-500 transition-all duration-300">
              <svg class="w-7 h-7 text-white ml-1" fill="currentColor" viewBox="0 0 24 24">
                <path d="M8 5v14l11-7z"/>
              </svg>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Show all button - links to separate page -->
    <div class="text-center mt-8" data-animate>
      <a
        href={musicPageUrl}
        class="inline-flex items-center gap-2 px-8 py-3 bg-dark-900 border border-gold/30 text-gold-light text-sm font-bold tracking-widest uppercase rounded-full hover:border-gold/60 hover:bg-dark-800 hover:scale-105 hover:shadow-[0_0_20px_rgba(201,168,76,0.2)] transition-all duration-300"
      >
        {t('music.showAll')}
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    </div>
  </div>
</section>

<script>
  document.querySelectorAll('.yt-lite').forEach((el) => {
    el.addEventListener('click', () => {
      const videoId = el.getAttribute('data-videoid');
      if (!videoId) return;
      const iframe = document.createElement('iframe');
      iframe.src = `https://www.youtube.com/embed/${videoId}?autoplay=1`;
      iframe.className = 'w-full h-full absolute inset-0';
      iframe.allow = 'accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture';
      iframe.allowFullscreen = true;
      el.innerHTML = '';
      el.classList.remove('cursor-pointer', 'group');
      el.appendChild(iframe);
    });
  });
</script>
