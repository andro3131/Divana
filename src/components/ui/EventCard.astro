---
interface Props {
  id: string;
  title: string;
  date: string;
  location: string;
  price?: number | null;
  remaining: number;
  capacity: number;
  reserveLabel: string;
  soldOutLabel: string;
  spotsLeftLabel: string;
  priceLabel: string;
  perPairLabel: string;
  reservePath: string;
}

const { id, title, date, location, price, remaining, capacity, reserveLabel, soldOutLabel, spotsLeftLabel, priceLabel, perPairLabel, reservePath } = Astro.props;

const isSoldOut = remaining <= 0;
const spotsText = spotsLeftLabel.replace('{count}', String(remaining));
---

<div class="bg-dark-800/50 border border-dark-700/50 rounded-2xl p-6 hover:border-gold/30 transition-all duration-300">
  <h3 class="text-xl font-heading font-semibold text-dark-50 mb-3">{title}</h3>
  <div class="space-y-2 text-dark-300 text-sm mb-5">
    <p class="flex items-center gap-2">
      <svg class="w-4 h-4 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
      {date}
    </p>
    <p class="flex items-center gap-2">
      <svg class="w-4 h-4 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
      {location}
    </p>
    {price && (
      <p class="flex items-center gap-2">
        <svg class="w-4 h-4 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
        {(price / 100).toFixed(0)}&euro; {perPairLabel}
      </p>
    )}
  </div>

  <div class="flex items-center justify-between">
    {isSoldOut ? (
      <span class="text-red-400 font-semibold text-sm">{soldOutLabel}</span>
    ) : (
      <span class="text-primary-400 text-sm font-medium">{spotsText}</span>
    )}

    {!isSoldOut && (
      <a
        href={`${reservePath}/${id}`}
        class="inline-flex items-center px-5 py-2 bg-gradient-to-r from-primary-400 to-primary-600 text-dark-950 font-medium text-sm rounded-lg hover:from-primary-300 hover:to-primary-500 transition-all duration-300"
      >
        {reserveLabel}
      </a>
    )}
  </div>
</div>
