---
interface Props {
  title: string;
  description: string;
  icon: string;
}

const { title, description, icon } = Astro.props;
---

<div class="group bg-dark-800/50 border border-dark-700/50 rounded-2xl p-8 hover:border-gold/30 hover:bg-dark-800/80 transition-all duration-300" data-animate>
  <div class="text-4xl mb-5">{icon}</div>
  <h3 class="text-xl font-heading font-semibold text-dark-50 mb-3 group-hover:text-gold-light transition-colors">{title}</h3>
  <p class="text-dark-300 leading-relaxed">{description}</p>
</div>
