---
import '../styles/global.css';

interface Props {
  title?: string;
}

const { title = 'Admin - Divana' } = Astro.props;
---

<!doctype html>
<html lang="sl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex, nofollow" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet" />
  </head>
  <body class="bg-dark-900 text-dark-50 font-body antialiased min-h-screen">
    <nav class="bg-dark-950 border-b border-dark-700/50 px-6 py-4">
      <div class="max-w-6xl mx-auto flex items-center justify-between">
        <a href="/admin" class="text-xl font-semibold text-gold">Divana Admin</a>
        <div class="flex items-center gap-4">
          <a href="/admin/events" class="text-dark-300 hover:text-dark-50 transition-colors text-sm">Dogodki</a>
          <a href="/" class="text-dark-400 hover:text-dark-200 transition-colors text-sm">Nazaj na stran</a>
          <form method="POST" action="/api/admin/logout" class="inline">
            <button type="submit" class="text-dark-400 hover:text-red-400 transition-colors text-sm">Odjava</button>
          </form>
        </div>
      </div>
    </nav>
    <main class="max-w-6xl mx-auto px-4 py-8">
      <slot />
    </main>
  </body>
</html>
