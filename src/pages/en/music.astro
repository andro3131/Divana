---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { useTranslations } from '../../i18n/ui';
import { YOUTUBE_VIDEOS, SPOTIFY_ARTIST_ID } from '../../lib/constants';
import SectionHeading from '../../components/ui/SectionHeading.astro';

const locale = 'en' as const;
const t = useTranslations(locale);
---

<BaseLayout title="Music - Divana" description="All videos and music by Maja Marinčič - Divana.">
  <section class="py-24 px-4 md:px-8 bg-dark-950 min-h-screen">
    <div class="max-w-7xl mx-auto">
      <!-- Back link -->
      <a href="/en/#music" class="inline-flex items-center gap-2 text-gold-light/70 hover:text-gold-light text-sm tracking-wider uppercase mb-8 transition-colors">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back
      </a>

      <SectionHeading title={t('music.title')} />

      <!-- All YouTube Videos - 2 per row -->
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 mb-16" data-animate>
        {YOUTUBE_VIDEOS.map((videoId) => (
          <div class="aspect-video rounded-xl overflow-hidden bg-dark-800">
            <iframe
              src={`https://www.youtube.com/embed/${videoId}`}
              title="YouTube video"
              class="w-full h-full"
              loading="lazy"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
            ></iframe>
          </div>
        ))}
      </div>

      <!-- Spotify Player -->
      <div class="max-w-3xl mx-auto" data-animate>
        <h3 class="text-lg text-dark-200 text-center mb-4 tracking-wider uppercase">{t('music.listenOn')}</h3>
        <div class="rounded-xl overflow-hidden">
          <iframe
            src={`https://open.spotify.com/embed/artist/${SPOTIFY_ARTIST_ID}?utm_source=generator&theme=0`}
            width="100%"
            height="352"
            frameborder="0"
            allowfullscreen
            allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
            loading="lazy"
            style="border-radius: 12px;"
          ></iframe>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
