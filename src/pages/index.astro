---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/sections/Hero.astro';
import About from '../components/sections/About.astro';
import Music from '../components/sections/Music.astro';
import Gallery from '../components/sections/Gallery.astro';
import Services from '../components/sections/Services.astro';
import DanceInfo from '../components/sections/DanceInfo.astro';
import Contact from '../components/sections/Contact.astro';

const locale = 'sl' as const;
---

<BaseLayout
  title="Divana - Maja Marinčič | Pevka"
  description="Maja Marinčič - Divana. Slovenska pevka za koncerte, poroke, plesne večere in korporativne dogodke. Glas, ki se vas dotakne."
>
  <Hero locale={locale} />
  <About locale={locale} />
  <Music locale={locale} />
  <Gallery locale={locale} />
  <Services locale={locale} />
  <DanceInfo locale={locale} />
  <Contact locale={locale} />
</BaseLayout>
