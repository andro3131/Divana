---
export const prerender = false;

import BaseLayout from '../../layouts/BaseLayout.astro';
import { useTranslations } from '../../i18n/ui';

const locale = 'sl' as const;
const t = useTranslations(locale);

const sessionId = Astro.url.searchParams.get('session_id');
let sessionValid = false;

if (sessionId) {
  try {
    const { getStripe } = await import('../../lib/stripe');
    const stripe = getStripe();
    const session = await stripe.checkout.sessions.retrieve(sessionId);
    sessionValid = session.payment_status === 'paid';
  } catch {
    sessionValid = false;
  }
}
---

<BaseLayout title="Plačilo uspešno - Divana">
  <section class="min-h-screen py-28 px-4 bg-dark-900 flex items-center">
    <div class="max-w-lg mx-auto text-center">
      {sessionValid ? (
        <>
          <div class="w-20 h-20 bg-green-900/30 rounded-full flex items-center justify-center mx-auto mb-8">
            <svg class="w-10 h-10 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
          </div>
          <h1 class="text-3xl font-heading font-semibold text-gold-gradient mb-4">{t('payment.successTitle')}</h1>
          <p class="text-dark-300 mb-8">{t('payment.successMessage')}</p>
        </>
      ) : (
        <>
          <div class="w-20 h-20 bg-red-900/30 rounded-full flex items-center justify-center mx-auto mb-8">
            <svg class="w-10 h-10 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </div>
          <h1 class="text-3xl font-heading font-semibold text-red-400 mb-4">{t('payment.errorTitle')}</h1>
          <p class="text-dark-300 mb-8">{t('payment.errorMessage')}</p>
        </>
      )}
      <a href="/" class="inline-flex items-center text-gold hover:text-gold-light transition-colors gap-2">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/></svg>
        {t('payment.backHome')}
      </a>
    </div>
  </section>
</BaseLayout>
